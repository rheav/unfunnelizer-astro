---
import Layout from '../layouts/Layout.astro';

const changelogItems = [
  {
    title: "Initial Release",
    date: "2023-06-01",
    description: "Launched unFunnelizer with core functionality to analyze competitor funnels."
  },
  {
    title: "Smart Mode Enhancement",
    date: "2023-07-15",
    description: "Introduced Smart Mode for quicker funnel analysis and improved user experience."
  },
  {
    title: "CTA Detection Update",
    date: "2023-08-30",
    description: "Enhanced CTA detection algorithm for more accurate results across various funnel types."
  }
];
---

<Layout title="Changelog - unFunnelizer">
  <main class="bg-white dark:bg-gray-900 py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-8">Changelog</h1>
      <div class="w-full">
        <ul class="flex flex-col w-full">
          {changelogItems.map((item, index) => (
            <li class="relative flex flex-col gap-2">
              <span class="absolute left-0 grid justify-center transition-opacity duration-200 bg-transparent">
                <span class="h-full w-0.5 bg-blue-gray-100 dark:bg-blue-gray-700"></span>
              </span>
              <div class="flex items-center h-3 gap-4">
                <span
                  class="relative z-[2] w-max flex-shrink-0 overflow-hidden rounded-full bg-gray-900 dark:bg-gray-100 p-1.5 text-white dark:text-gray-900"
                ></span>
                <h6
                  class="block font-sans text-base antialiased font-semibold leading-none tracking-normal text-blue-gray-900 dark:text-blue-gray-100"
                >
                  {item.title}
                </h6>
              </div>
              <div class="flex gap-4 pb-8">
                <span class="flex-shrink-0 invisible h-full pointer-events-none"></span>
                <div>
                  <p class="block font-sans text-sm antialiased font-normal leading-normal text-gray-600 dark:text-gray-400 mb-2">
                    {item.date}
                  </p>
                  <p class="block font-sans text-sm antialiased font-normal leading-normal text-gray-600 dark:text-gray-400">
                    {item.description}
                  </p>
                </div>
              </div>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </main>
</Layout>