---
import VideoAutoPlay from './VideoAutoPlay.astro';
---

<section class="bg-white dark:bg-gray-900 py-12">
  <div class="px-4 mx-auto max-w-screen-xl text-center lg:px-12">
    <VideoAutoPlay video="/placeholder-main-video-hero.mp4" />
    <h2 class="text-3xl font-extrabold tracking-tight leading-none text-gray-900 md:text-3xl lg:text-6xl dark:text-white">
      Click. Deconstruct.
      <span class="text-transparent bg-clip-text bg-gradient-to-r from-startCold to-endCold">
        Profit!
      </span>
    </h2>
  </div>
</section>